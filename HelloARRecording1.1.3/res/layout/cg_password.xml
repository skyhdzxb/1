<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:background="@drawable/bk_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/background_btn">
            
            <ImageView
                android:id="@+id/cgpassword_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back_white" 
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/cgpassword_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修 改 密 码"
                android:textSize="20sp"
                android:padding="10dp"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
              android:layout_marginRight="14dp"
            android:layout_marginTop="30dp"
            android:background="#ededed"
            android:orientation="vertical" >
            
             <EditText
                android:id="@+id/phonum_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/login_et_bg"
                android:hint="手机号"
                android:inputType="text"
                android:padding="5dp" />

            <EditText
                android:id="@+id/prepws_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/login_et_bg"
                android:hint="原密码"
                android:inputType="textPassword"
                android:padding="5dp" />
         <!--     <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CBCED2" /> -->
        
         
           <EditText
                android:id="@+id/newpws_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/login_et_bg"
                android:hint="新密码"
                android:inputType="textPassword"
                android:padding="5dp" />
           
         <!--    <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#CBCED2" /> -->
            
             <EditText
                android:id="@+id/rpws_et"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/login_et_bg"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:padding="5dp" />
             
      </LinearLayout>
        <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft = "8dp"
        android:text="显示密码" />
      
          <Button
              android:id="@+id/confirm_bt"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_marginLeft="14dp"
              android:layout_marginRight="14dp"
              android:layout_marginTop="30dp"
              android:background="@drawable/background_btn"
              android:onClick="confirm"
              android:text="确       认"
              android:textColor="@android:color/white" />

</LinearLayout>
