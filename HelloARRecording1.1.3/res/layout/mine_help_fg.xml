<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bk_all">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/background_btn">
        
        <ImageView
                android:id="@+id/help_back_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back_white" 
                android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/mine_managment"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:text="帮助与反馈"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

   
  <!--  <View
        android:layout_width="fill_parent"
        android:layout_height="13dip"
        android:background="#E0DFE0" /> -->
     
   <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >
        <RelativeLayout
                android:id="@+id/funinfo_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_list"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/funinfo_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/arrow_normal"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="功能介绍"
                    android:textColor="#000000"
                    android:textSize="18sp" />
          </RelativeLayout>
     <View
        android:layout_width="fill_parent"
        android:layout_height="8dip"
        android:background="#cccccc" />
    
         <RelativeLayout
                android:id="@+id/upgrade_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_list"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/upgrade_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:drawablePadding="8dp"
                    android:drawableRight="@drawable/arrow_normal"
                    android:gravity="center_vertical"
                    android:onClick="check"
                    android:padding="10dp"
                    android:text="版本更新"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </RelativeLayout>

  <View
        android:layout_width="fill_parent"
        android:layout_height="8dip"
        android:background="#cccccc" />

    <RelativeLayout
        android:id="@+id/contact_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list"
        android:padding="10dp">
    <TextView
        android:id="@+id/contact_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:drawableRight="@drawable/arrow_normal"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="联系我们"
        android:textColor ="#000000"
        android:textSize="18sp" />
    </RelativeLayout>

   
